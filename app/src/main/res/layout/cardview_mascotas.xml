<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardview_mascotas_main"
    android:layout_gravity="top"
    android:elevation="7dp"
    app:cardCornerRadius="6dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/cardview_mascotas_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/perro1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp"
            android:weightSum="1">

            <ImageView
                android:id="@+id/cardview_mascotas_hueso_like"
                android:layout_width="@dimen/dim_boton"
                android:layout_height="@dimen/dim_boton"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.1"
                android:visibility="visible"
                android:src="@drawable/hueso_blanco" />

            <ImageView
                android:id="@+id/cardview_mascotas_hueso_like_azul"
                android:layout_width="@dimen/dim_boton"
                android:layout_height="@dimen/dim_boton"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.1"
                android:visibility="gone"
                android:src="@drawable/hueso_azul" />

            <TextView
                android:id="@+id/cardview_mascotas_nombre"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.65"
                android:textAlignment="center"
                android:textSize="@dimen/dim_texto"
                android:text="Rambo" />

            <TextView
                android:id="@+id/cardview_mascotas_likes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:textAlignment="center"
                android:textSize="@dimen/dim_textofav"
                android:text="0" />

            <ImageView
                android:id="@+id/cardview_mascotas_hueso_suma"
                android:layout_width="@dimen/dim_boton"
                android:layout_height="@dimen/dim_boton"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.1"
                android:src="@drawable/hueso_dorado" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>